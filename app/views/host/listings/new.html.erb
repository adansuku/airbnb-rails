<h1>New property</h1>
<%= render partial: "shared/errors" %>

<form action="/host/listings" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="title">Title</label>
    <input type="text" id="title" name="listing[title]" value="<%= @listing.title %>">

    <label for="about">About</label>
    <textarea id="about" name="listing[about]"><%= @listing.about %></textarea>

    <label for="max_guest"> Max Guests </label>
    <input type="number" id="max_guest" name="listing[max_guest]" value="<%= @listing.max_guest %>" min="1" max="100" step="1">

    <input type="submit" value="Create listing">
</form>